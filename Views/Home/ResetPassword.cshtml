@using twd_project.Helpers
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout_Simple.cshtml";
}


<div class="col-lg-7">
    <div class="well">
        @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post, new { @class = "bs-example form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>Reset Password</legend>
                <p>@ViewBag.Message</p>
                <div class="form-group">
                    <label for="txtEmail" class="col-lg-5 control-label">Email</label>
                    <div class="col-lg-7">
                        <input class="form-control" type="text" id="txtEmail" name="txtEmail" placeholder="Enter Email" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="captcha" class="col-lg-5 control-label">Verification</label>
                    <div class="col-lg-7">
                        @Html.Raw(Html.GenerateCaptcha())
                        @Html.ValidationMessage("recaptcha")
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-5">
                        <button id="add_biz" type="submit" class="btn btn-primary">Send</button>
                    </div>
                </div>
            </fieldset>              
        }
    </div>
</div>
