                @Html.Raw("<td nowrap style='text-align:center;'>") @items[4] @Html.Raw("</td>")
                @Html.Raw("<td nowrap style='text-align:left;'>")   @items[5] @Html.Raw("</td>")
                @Html.Raw("</tr>") *@
            } 
        }
