                        @Html.Raw("<td nowrap style='text-align:center;'>") @items[2] @Html.Raw(" %</td>")
                        @Html.Raw("<td nowrap style='text-align:center;'>") @items[3] @Html.Raw("</td>")
                        @Html.Raw("<td nowrap style='text-align:center;'>") @items[4] @Html.Raw("</td>")
                        @Html.Raw("<td nowrap style='text-align:left;'>")   @items[5] @Html.Raw("</td>")
                        @Html.Raw("</tr>")
                        break;
                    case "EP":
                        @Html.Raw("<tr bgcolor='#D9FCD2'>")
                        @Html.Raw("<td nowrap>")@Html.Raw(@items[1])@Html.Raw("</td>")
                        @Html.Raw("<td nowrap style='text-align:center;'>") @items[2] @Html.Raw(" %</td>")
                        @Html.Raw("<td nowrap style='text-align:center;'>") @items[3] @Html.Raw("</td>")
                        @Html.Raw("<td colspan='2' nowrap style='text-align:center;'>") @items[4] @Html.Raw("</td>")
                        @Html.Raw("</tr>")
                        break;
                    default:
                        break;
                    }
          
                
                
                
                
                
